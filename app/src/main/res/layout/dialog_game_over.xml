<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:paddingHorizontal="8dp"
    android:paddingVertical="24dp">

    <FrameLayout
        android:id="@+id/pages_frame_layout_game_over_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/root_linear_layout_second_page_game_over_dialog"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="@drawable/gap_game_over_dialog">

            <!-- GameOverDialog is the only dialog where we are keeping the
                 text of the dialog in uppercase (as the text is short & should
                 be in caps based on it's significance) -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/second_page_title_text_view_game_over_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:text="GAME OVER"
                android:textAlignment="center"
                android:textColor="@color/game_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Lottie Animation Link = https://lottiefiles.com/68436-you-lose -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_game_over_dialog"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                app:lottie_rawRes="@raw/game_over" />

            <FrameLayout
                android:id="@+id/scores_summary_frame_layout_game_over_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/new_high_score_summary_linear_layout_game_over_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <!-- Useful Emojis : ðŸ…ðŸ¥‡ðŸŽ–ðŸ† -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scrollHorizontally="false"
                        android:text="ðŸ† New High Score"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:text=":"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/new_high_score_text_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scrollHorizontally="false"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/scores_summary_constraint_layout_game_over_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/score_description_text_view_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Score"
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:scrollHorizontally="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/score_mid_colon_text_view_game_over_dialog"
                        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_mid_scores_summary_game_over_dialog" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/score_mid_colon_text_view_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_mid_scores_summary_game_over_dialog"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/score_text_game_over_dialog"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:scrollHorizontally="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/score_mid_colon_text_view_game_over_dialog"
                        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_mid_scores_summary_game_over_dialog" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/horizontal_guide_mid_scores_summary_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/high_score_description_text_view_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="High Score"
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:scrollHorizontally="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/high_score_mid_colon_text_view_game_over_dialog"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_mid_scores_summary_game_over_dialog" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/high_score_mid_colon_text_view_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_mid_scores_summary_game_over_dialog"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/high_score_text_game_over_dialog"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/game_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:scrollHorizontally="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/high_score_mid_colon_text_view_game_over_dialog"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_mid_scores_summary_game_over_dialog" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/second_page_all_buttons_linear_layout_game_over_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/second_page_main_menu_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/click_dialog_button"
                        android:letterSpacing="0.04"
                        android:maxEms="10"
                        android:minEms="6"
                        android:padding="10dp"
                        android:text="MAIN MENU"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/second_page_play_again_game_over_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/click_dialog_button"
                        android:letterSpacing="0.04"
                        android:maxEms="10"
                        android:minEms="6"
                        android:padding="10dp"
                        android:text="PLAY AGAIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/second_page_back_game_over_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/click_dialog_button"
                    android:letterSpacing="0.04"
                    android:maxEms="10"
                    android:minEms="6"
                    android:padding="10dp"
                    android:text="BACK"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/game_over_dialog_page_unselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/game_over_dialog_page_selected" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>