<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:paddingHorizontal="8dp"
    android:paddingVertical="24dp">

    <!-- Lottie Animation Link = https://lottiefiles.com/68436-you-lose -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/game_over_lottie"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/game_over_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/game_over"
        app:lottie_repeatCount="4"
        app:lottie_repeatMode="restart" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/game_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:letterSpacing="0.04"
        android:text="GAME OVER"
        android:textAlignment="center"
        android:textColor="@color/game_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/game_over_all_buttons_linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_over_lottie" />

    <LinearLayout
        android:id="@+id/game_over_all_buttons_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_over_text">

        <LinearLayout
            android:id="@+id/game_over_buttons_first_row_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_over_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/dialog_buttons"
                android:letterSpacing="0.04"
                android:maxEms="10"
                android:minEms="6"
                android:padding="10dp"
                android:text="MAIN MENU"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_over_play_again"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/dialog_buttons"
                android:letterSpacing="0.04"
                android:maxEms="10"
                android:minEms="6"
                android:padding="10dp"
                android:text="PLAY AGAIN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/game_over_undo_last_move"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/dialog_buttons"
            android:letterSpacing="0.04"
            android:maxEms="10"
            android:minEms="6"
            android:padding="10dp"
            android:text="UNDO LAST MOVE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>